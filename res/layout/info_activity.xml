<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10.0sp"
    tools:context=".Info_Activity" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tab_menu_active"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
            
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/separator"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            
            <TextView
                android:id="@+id/app_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
            
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/separator"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            
            <TextView
                android:id="@+id/app_contact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_contact"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
            
            <TextView
                android:id="@+id/app_site"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="@string/app_site"
                android:textColor="#67FF22"
                android:textSize="18.0dip" />
            
            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/separator"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            
            <TextView
                android:id="@+id/app_footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_footer"
                android:textColor="#ffffff"
                android:textSize="18.0dip" />
            
               <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/separator"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

               <Button
                   android:id="@+id/donationButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/donate_button" />
                        
        </LinearLayout>
    </ScrollView>
